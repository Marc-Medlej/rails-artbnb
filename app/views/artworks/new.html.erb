      <%= simple_form_for(@artwork) do |f| %>
        <%= f.error_notification %>
        <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>
        
        <%= f.input :name %>
        <%= f.input :artist_name %>
        <%= f.input :location %>
        <%= f.input :description %>
        <%= f.input :price_per_day%>
        <%= f.submit %>
      <% end %>