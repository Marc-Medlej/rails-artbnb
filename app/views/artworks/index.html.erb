<div class="conatiner justify-content-start p-2">
  <div class="row m-2">
    <div class="col-2">
      <h1>Artbnb</h1>
    </div>
    <div class="col-8">
      <p class="text-center p-2">A list of art that can be yours for short-term</p>
    </div>
    <div class="col-2 create-button">
      <%= link_to "Create new artwork", new_artwork_path, class: "btn"%>
    </div>
  </div>
</div>

<div class="container">
  <div class="row">
  <% @artworks.each do |artwork| %>
    <div class="col-xs-12 col-sm-12 col-md-6 col-lg-6">
      <div class="card-product m-3">
        <img src="https://source.unsplash.com/random" />
          <div class="card-product-infos">
            <h2><%= link_to artwork.name, artwork_path(artwork)%></h2>
            <p><%= artwork.artist_name %></p>
            <p><%= artwork.description %></p>
            <p><%= artwork.description %></p>
            <p>Book</p>
          </div>
        </div>
      </div>
  <% end %>
  </div>
</div>
