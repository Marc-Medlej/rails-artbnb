<div class="conatiner justify-content-start p-2">
  <div class="row m-2">
    <div class="col-2">
    </div>
    <div class="col-8">
      <h2 class="text-center p-2">My Profile</h2>
    </div>
  <div class="col-2 create-button text-center">
      <%= link_to "Add artwork for hire", new_artwork_path, class: "btn"%>
    </div>
  </div>
</div>

<div class="container m-3 p-2">
  <h2>My Artwork</h2>
    <div class="row">
      <% @artworks.each do |artwork| %>

          <div class="col-xs-12 col-sm-12 col-md-6 col-lg-6">
            <div class="card-product flex-container space-between m-3 p-3">
              <img src="https://source.unsplash.com/random"/>
                <div class="card-product-infos">
                  <p><i class="fas fa-user-alt"></i> <%= artwork.name %></p>
                  <p><i class="fas fa-user-alt"></i> <%= artwork.artist_name %></p>
                  <p><i class="fas fa-pound-sign"></i> <%= artwork.price_per_day %> per day</p>
                  <p><i class="fas fa-compass"></i> <%= artwork.location %></p>
                  <p><i class="fas fa-th-list"></i> <%= artwork.description %></p>
                </div>
            </div>
            <% artwork.bookings.each do |booking| %>
        <div class="list-group">
          <ul class="list-inline list-unstyled">
            <li class="list-inline-item">Booking info:</li>
            <li class="list-inline-item"><i class="fas fa-user-alt"></i> <%= booking.status %></li>
            <li class="list-inline-item"><i class="fas fa-pound-sign"></i> <%= booking.time_start %></li>
            <li class="list-inline-item"><i class="fas fa-compass"></i> <%= booking.time_end %></li>
            <li class="list-inline-item"><i class="fas fa-th-list"></i> <%= booking.calculated_price %></li>
            <li><%= link_to "Edit Booking Status",  edit_booking(artwork.booking)%></li>
          </ul>
        </div>
        </div>
        <% end %>
      <% end %>
  </div>
</div>

<div class="container m-3 p-2">
  <h2>My Bookings</h2>
    <div class="row">
      <% @bookings.each do |booking| %>
        <div class="col-xs-12 col-sm-12 col-md-6 col-lg-6">
          <div class="card-product flex-container space-between m-3 p-3">
            <img src="https://source.unsplash.com/random"/>
              <div class="card-product-infos">
                <p><i class="fas fa-palette"></i></i> <%= booking.artwork.name %></p>

                <% if booking.status == "confirmed" %>
                  <p><i class="fas fa-check-circle"></i> <%= booking.status %></p>
                <% elsif booking.status == "rejected" %>
                  <p><i class="fas fa-times"></i><%= booking.status %></p>
                <% else %>
                  <p><i class="fas fa-question"></i> <%= booking.status %></p>
                <% end %>
                <p><i class="fas fa-calendar-times"></i> <%= booking.time_start %></p>
                <p><i class="far fa-calendar-times"></i> <%= booking.time_end %></p>
                <p><i class="fas fa-pound-sign"></i> <%= booking.calculated_price %></p>
              </div>
          </div>
        </div>
      <% end %>
  </div>
</div>
